  <h1>Comment List</h1>

  <table>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
       <td>
         <%= link_to 'Show', comment_path(comment) %>
         <%= link_to 'Edit', edit_comment_path(comment) %>
         <%= button_to 'Delete', comment_path(comment), method: :delete %>
       </td>
      </tr>
    <% end %>
  </table>

