<%= form_with model: comment do |form| %>
  <% if comment.errors.any? %>
    <ul>
      <% comment.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <div>
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>
  <%= form.submit %>
<% end %>